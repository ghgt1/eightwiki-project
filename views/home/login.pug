doctype html
html
	head
		include ../partials/head.pug
	body.bg-info
		div.container-fluid
			div.row
				include ../partials/nav.pug
				div.col-md-6.col-md-offset-3
					form(action="/login", method="post")
						h3 Login
						div
							label(for="username") UserId
							input.form-control(class=(errors.username)?"is-valid":"", type="text", name="username", value=username)
							if errors.username
								div.alert.alert-danger(role="alert")
									span.glyphicon.glyphicon-exclamation-sign(aria-hidden="true")
									span.sr-only Error:
									= errors.username
						div
							label(for="password") Password
							input.form-control(class=(errors.password)?"is-valid":"", type="password", name="password", value="")
							if errors.password
								div.alert.alert-danger(role="alert")
									span.glyphicon.glyphicon-exclamation-sign(aria-hidden="true")
									span.sr-only Error:
									= errors.password

						div
							if errors.login
								div.alert.alert-danger(role="alert")
									span.glyphicon.glyphicon-exclamation-sign(aria-hidden="true")
									span.sr-only Error:
									= errors.login

						div
							button.btn.btn-primary.custom-btn-padding(type="submit") 로그인
							a.btn.btn-success.custom-btn-padding(href="/login/naver") 네이버로 로그인
				div.col-md-3
					include ../partials/aside.pug
					include ../chat/chat.pug