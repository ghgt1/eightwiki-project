doctype html
html
	head
		include ../partials/head.pug
	body
		div.wrap
			include ../partials/nav.pug
			div.content
				div
					if isAuthenticated
						a.new-document(href="/posts/new") 문서 생성
				div#board
					table
						thead
							tr
								th#post-title(scope="col") Title
								th(scope="col") Author
								th#post-date(scope="col") Date
						tbody
							p #{posts.updatedAt}
							if (posts == null || posts.length == 0)
								tr
									td(colspan=2) There is no data to show :(
							each post in posts
								tr
									td
										a(href="/posts/"+post._id)
											div= post.title
									td.author
										div= (post.author) ? post.author.username : ""
									td.date
										span(data-date=post.createdAt)

			include ../partials/aside.pug
