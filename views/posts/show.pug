doctype html
html
    head
        include ../partials/head.pug
    body
        include ../partials/nav.pug

        div
            nav
                ol
                    li
                        a(href="/") Home
                    li
                        a(href="/posts") Board
                    li= post.title

            div
                h5= post.title
                div
                    div
                        div= post.body
                    div
                        div
                            div
                                span Created
                                |  : 
                                span(data-date-time=post.createdAt)
                            if post.updatedAt
                                div
                                    span Updated
                                    |  : 
                                    span(data-date-time=post.updatedAt)
            
            div
                a(href="/posts") Back
                a(href="/posts/"+post._id+"/edit") Edit
                form(action="/posts/"+post._id+"?_method=delete", method="post")
                    a(href="javascript:void(0)", onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;") Delete