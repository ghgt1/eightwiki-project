doctype html
html
    head
        include ../partials/head.pug
    body
        include ../partials/nav.pug

        div
            nav
                ol
                    li
                        a(href="/") Home
                    li
                        a(href="/posts") Board
                    li= post.title

            div
                h5= post.title
                div
                    div
                        div= post.body
                    div
                        div
                            div
                                span Created
                                |  : 
                                span(data-date-time=post.createdAt)
                            if post.updatedAt
                                div
                                    span Updated
                                    |  : 
                                    span(data-date-time=post.updatedAt)
            
            div
                a(href="/posts") Back
                a(href="/posts/"+post._id+"/edit") Edit
                form(action="/posts/"+post._id+"?_method=delete", method="post")
                    a(href="javascript:void(0)", onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;") Delete
            div Comments
            if comments.length
                each comment in comments
                    p #{comment.author.username}
                    p #{comment.text}
            div
                form(action='/comments?postId='+post._id+getPostQueryString(true), method='post')
                    fieldset("!isAuthenticated?'disabled':''")
                        row
                            .col-8
                                textarea.form-control(name='text' rows='2') #{commentForm.form.text}
                            .col-4
                                button.btn.btn-primary.h-100.mr-2(type='submit') Add Comment
            