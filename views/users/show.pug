doctype html
html
	head
		include ../partials/head.pug
	body.bg-info
		div.container-fluid
			div.row
				include ../partials/nav.pug
				div.col-md-6.col-md-offset-3.bg-danger
					div.content
						h1= user.username
						form(action="/users", method="post")
							fieldset(disabled)
								div
									label(for="name") Name
									input.form-control(type="text", name="name", value=user.username)
								div
									label(for="email") Email
									input.form-control(type="text", name="email", value=user.email)

						a.btn.btn-primary.custom-btn-padding(href="/users") Back
						if (isAuthenticated && currentUser.id == user.id)
							a.btn.btn-success.custom-btn-padding(href="/users/"+user.username+"/edit") Edit
							form(action="/users/"+user.username+"?_method=delete" method="post" style = "display:inline-block")
								button.btn.btn-danger.custom-btn-padding(type="submit") Delete
				div.col-md-3
					include ../partials/aside.pug
					include ../chat/chat.pug
